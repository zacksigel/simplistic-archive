<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/css/bootstrap.min.css" integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous"> -->
    <title>SimpLISTic</title>
    <style>
        body {
            background-color: white;
            font-family: Georgia, serif;
            cursor: default;
        }
        table {
            margin: 0 auto;
            padding: 150px;
        }
        td {
            border: 0.3px solid;
        }
        thead {
            font-weight: 800;
        }
        input[type=text], [type=date] {
            font-family: Georgia, serif;
            border: 0px;
            background: transparent;
            width: 100%;
            transition-duration: 0.07s; 
            font-size: 14px;
            cursor: default;
        }
        input[type=text]:hover {
            background: whitesmoke;
        }
        input[type=date]:hover {
            background: whitesmoke;
        }
        .btn {
            border: none;
            background: none;
        }
        .btn:hover{
            background: whitesmoke;
        }
        .entrytrue {
            text-decoration: line-through;
        }
        .itemdatelateperformed {
            width: 25%;
            font-size: 14px;
        }
        #column-date {
            padding-left: 4px;
            padding-right: 4px;
        }
        #column-item {
            padding-left: 3px;
            padding-right: 3px;
        }
        .noborder {
            border: none;
        }
        #listitem {
            width: 400px;
        }

    </style>
    <script src="https://code.jquery.com/jquery-3.6.3.js"></script>
</head>
<body>
        <table>
            <thead>
                <tr>
                    <td class="noborder">SimpLISTic</td>
                </tr>
                <tr>
                    <td class="noborder"></td>
                    <td class="noborder"></td>
                    <td id="column-item">Item</td>
                    <td id="column-date">Due Date</td>
                    <td>Date Last Performed</td>
                </tr>
            </thead>
            <tbody>
                <% items.forEach(item => { %>
                    <tr>
                        <td align="right" class="noborder">
                            <form action="/notes/<%= item._id %>?_method=DELETE" method="POST">
                                <input type="submit" value="âŒ" class="btn btn-primary btn-sm">
                            </form>
                        </td>

                            <form action="/notes/<%= item._id %>?_method=PUT" method="POST">
                            <% if (item.completed === "ðŸŸ¢") { %>
                                <input type="text" value="" hidden name="dateLastPerformed">
                                <td class="noborder"><input type="submit" value="âœ…" class="btn" name="completed"></td>
                            <% } else if (item.completed === "âœ…") { %>
                                <input type="text" value="<%= new Date().toLocaleString() %>" hidden name="dateLastPerformed">
                                <td class="noborder"><input type="submit" value="ðŸŸ¢" class="btn" name="completed"></td>             
                            <% } %></form>

                            <form action="/notes/<%= item._id %>?_method=PUT" method="POST">
                            <% if (item.completed === "ðŸŸ¢") { %>
                                <td><input type="text" id="listitem" name="name" class="entrytrue" value="<%= item.name %>"></td>
                                <td><input type="date" name="dueDate" required="required" value="<%= item.dueDate %>"></td>
                            <% } else if (item.completed === "âœ…") { %>
                                <td><input type="text" id="listitem" name="name" value="<%= item.name %>"></td>
                                <td><input type="date" name="dueDate" required="required" value="<%= item.dueDate %>"></td>
                            <% } %></form>
                        <td class="itemdatelateperformed"><%= item.dateLastPerformed %></td>
                    
                    </tr>
                <% }) %>
                <tr>
                    <td class="noborder"></td>
                    <td class="noborder"></td>
                    <td class="noborder"><form action="/notes" method="POST">
                        <input type="submit" value="ï¼‹ Add New">
                    </form></td>
                    <td class="noborder"></td>
                    <td class="noborder"></td>
                </tr>
            </tbody>
        </table>


</body>
</html>