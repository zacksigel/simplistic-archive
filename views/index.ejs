<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/css/bootstrap.min.css" integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous"> -->
    <title>SimpLISTic</title>
    <style>
        body {
            background-color: lightblue;
            font-family: Georgia, serif;
            font-size: 14px;
        }
        table {
            margin: 0 auto;
            padding: 150px;
        }
        input[type=text] {
            font-family: Georgia, serif;
            border: 0px;
            background: transparent;
            width: 100%;
            transition-duration: 0.07s; 
            font-size: 14px;
        }
        input[type=text]:hover {
            font-family: Georgia, serif;
            border: 4px;
            background: white;
            width: 100%;
            cursor: default;
            font-size: 14px;
        }
        input[type=text]:active {
            cursor: default;
        }
        input[type=date] {
            font-family: Georgia, serif;
            border: 0px;
            background: transparent;
            width: 100%;
            transition-duration: 0.07s; 
            font-size: 14px;
        }
        input[type=date]:hover {
            font-family: Georgia, serif;
            border: 4px;
            background: white;
            width: 100%;
            cursor: default;
            font-size: 14px;
        }
        input[type=date]:active {
            cursor: default;
        }
        .btn {
            border: none;
            background: none;
        }
        .btn:hover{
            background: white;
        }
        .entrytrue {
            text-decoration: line-through;
        }
        .boldtest {
            font-style: italic;
        }
        .itemdatelateperformed {
            width: 50%;
        }

    </style>
    <script src="https://code.jquery.com/jquery-3.6.3.js"></script>
</head>
<body>
    <div class="container">
        <h1>SimpLISTic</h1>
        <table class="table table-bordered table-sm">
            <thead>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>Item</td>
                    <td>Due Date</td>
                    <td>Date Last Performed</td>
                </tr>
            </thead>
            <tbody>
                <% items.forEach(item => { %>
                    <tr>
                        <td>
                            <form action="/notes/<%= item._id %>?_method=DELETE" method="POST">
                                <input type="submit" value="❌" class="btn btn-primary btn-sm">
                            </form>
                        </td>
                        <td>
                                <input type="submit" value="⏬" class="btn btn-primary btn-sm">
                        </td>
                            <form action="/notes/<%= item._id %>?_method=PUT" method="POST">
                            <% if (item.completed === "🟢") { %>
                                <input type="text" value="" hidden name="dateLastPerformed">
                                <td><input type="submit" value="✅" class="btn" name="completed"></td>
                            <% } else if (item.completed === "✅") { %>
                                <input type="text" value="<%= new Date().toLocaleString() %>" hidden name="dateLastPerformed">
                                <td><input type="submit" value="🟢" class="btn" name="completed"></td>             
                            <% } %></form>

                            <form action="/notes/<%= item._id %>?_method=PUT" method="POST">
                            <% if (item.completed === "🟢") { %>
                                <td><input type="text" name="name" class="entrytrue" value="<%= item.name %>"></td>
                                <td><input type="date" name="dueDate" value="<%= item.dueDate %>"></td>
                            <% } else if (item.completed === "✅") { %>
                                <td><input type="text" name="name" value="<%= item.name %>"></td>
                                <td><input type="date" name="dueDate" value="<%= item.dueDate %>"></td>
                            <% } %></form>
                        <td class="itemdatelateperformed"><%= item.dateLastPerformed %></td>
                    
                    </tr>
                <% }) %>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td><form action="/notes" method="POST">
                        <input type="submit" value="Add New">
                    </form>
                    </td>
                    <td></td>
                </tr>
            </tbody>
        </table>
    </div>


</body>
</html>